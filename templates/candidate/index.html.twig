{% extends 'base.html.twig' %}

{% block title %}Hello Candidat!


{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="container-fluid">

        {# Titre de la page #}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Mon profil candidat</h1>
        </div>
    </div>

    <div class="container-fluid">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Pr√©nom</th>
                    <th scope="col">adresse</th>
                    <th scope="col">code postale</th>
                    <th scope="col">Ville</th>
                    <th scope="col">CV</th>
                    <th scope="col">{# Bouton d'action - Modifier #}</th>
                </tr>
            </thead>
            <tbody>
                    {% if(user) %}
                        <tr>
                            <th scope="row">
                                {{ user.id }}
                            </th>
                            <td>
                                {{ user.email }}
                            </td>
                            <td>
                                {{ user.lastname }}
                            </td>
                            <td>
                                {{ user.firstname }}
                            </td>
                            <td>
                                {{ user.address }}
                            </td>                            
                            <td>
                                {{ user.zipcode }}
                            </td>                            
                            <td>
                                {{ user.city }}
                            </td>
                            <td>
                                {{ user.CVFileName }}
                            </td>
                            <td>
                                <a href="{{ path('candidate_edit', {'id': user.id}) }}" role="button" class="btn btn-info">Modifier mon profil</a>
                            </td>
                        </tr>
                    {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
