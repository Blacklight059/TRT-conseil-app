{% extends 'base.html.twig' %}

{% block title %}Hello Admin!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="container-fluid">
        {# Titre de la page #}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Gestion des consultants</h1>
        </div>
    </div>

        <div class="row alert alert-warning" role="alert">
            <div class="col-xs-9 col-sm-10"></div>

            <div class="col-xs-3 col-sm-2">
                <a href="{{ path('admin_add') }}" role="button" class="btn btn-info text-right">
                    <i class="fa fa-plus fa-fw"></i> Ajouter
                </a>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">Mot de passe</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Pr√©nom</th>
                    <th scope="col">{# Bouton d'action - Supprimer #}</th>
                    <th scope="col">{# Bouton d'action - Modifier #}</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    {% if(user.roles[0] == 'ROLE_CONSULTANT') %}

                        <tr>
                            <th scope="row">
                                {{ user.id }}
                            </th>
                            <td>
                                {{ user.email }}
                            </td>
                            <td>
                                {{ user.password }}
                            </td>
                            <td>
                                {{ user.lastname }}
                            </td>
                            <td>
                                {{ user.firstname }}
                            </td>
                            <td>
                                <a href="{{ path('admin_remove', {'id': user.id}) }}" role="button" class="btn btn-danger">Supprimer</a>
                            </td>
                            <td>
                                <a href="{{ path('admin_edit', {'id': user.id}) }}" role="button" class="btn btn-info">Modifier</a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
